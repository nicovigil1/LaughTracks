<h1>All the Activists</h1>

<div>
    <% @comedians.each do |comedian|%>
        <div id= '<%= "#{comedian.name.delete(' ')}" %>' class="comedian">
        <img src="<%= comedian.headshot %>"/>
            <ul>
                <li><%=comedian.name%></li>
                <li><%=comedian.age%></li>
                <li><%=comedian.city%></li>
            </ul>
            <div>
                <%comedian.specials.each do |special|%>
                    <ul>
                        <li><%= special.name %></li>
                        <li><%= special.runtime %></li>
                        <img src="<%=special.image%>">
                    </ul>
                <% end %>
            </div>
        </div>
    <%end%>
</div>

<div id="stats">

<div><%= "Average age: #{Comedian.average_age}" %></div>
<div>
    <p>Current Cities:</p>
    <ul>
    <%Comedian.cities.each do |city|%>
        <li><%=city%></li>
    <%end%>
    </ul>
</div>
</div>


