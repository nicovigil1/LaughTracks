<h1>All the Activists</h1>

<div>
    <% @comedians.each do |comedian|%>
        <div id= '<%= "#{comedian.name.delete(' ')}" %>' class="comedian">
            <ul>
                <li><%=comedian.name%></li>
                <li><%=comedian.age%></li>
                <li><%=comedian.city%></li>
            </ul>
        </div>
    <%end%>
</div>

<div>
    <%@specials.each do |special|%>
        <ul>
            <li><%= special.name %></li>
            <li><%= special.runtime %></li>
        </ul>
    <% end %>
</div>