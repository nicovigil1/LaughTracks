<!DOCTYPE HTML>
<html>
    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
        <script src="https://code.jquery.com/jquery-3.1.1.min.js"
                integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
                crossorigin="anonymous"></script>
        <script src='https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js'></script>
        <link rel="stylesheet" href="../style/style.css">
    </head>

    <body>
        <div class="ui menu">
            <a href='/comedians' class="ui header item">All the Comedians</a>
            <a href="/comedians/new" class="ui right item">Add a Comedian!</a>
        </div>


        <form action="/comedians" class="new-comedian ui form" method='POST' enctype="multipart/form-data">
        <h1 class="ui dividing header">Add A Comedian!</h1>
            <div class="three fields">
                <div class="field">
                    <label>First and Last Name:</label>
                    <input  type="text" name="comedian[name]" placeholder="First and Last Name">
                </div>
                <div class="field">
                    <label for="">Age:</label>
                    <input  type="text" name="comedian[age]" placeholder='Age'>
                </div>
                <div class="field">
                    <label for="">City:</label>
                    <input  type="text" name="comedian[city]" placeholder='City'>
                </div>
                <div class="field">
                    <label for="">Upload Image:</label>
                    <input type="file" name=comedian[headshot]>
                </div>
            </div>
            <button class='ui button' type="submit" value="Submit">Submit</button>
        </form>
    </body>
</html>